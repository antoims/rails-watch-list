<div class='container'>
  <h1>Save any kind of movies</h1>
  <p>Mylists</p>
  <ul class='list-group'>
    <% @lists.each do |list| %>
      <li class='list-group-item'> <%= link_to list.name, list_path(list), id: "link" %> </li>
    <% end %>
  </ul>
  <p> <%= link_to "Create a movie list", new_list_path, class: "btn btn-success", id: "margin-top"%> </p>
</div>
