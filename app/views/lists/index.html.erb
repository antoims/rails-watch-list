<div class='container'>
  <h1>my CANAL</h1>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url('<%= cl_image_path list.photo.key if list.photo.present?%>')">
          <%= link_to list.name, list_path(list), id: "link" %> </li>
        </div>
      <% end %>
    </div>
    <%= link_to "Créer une nouvelle catégorie", new_list_path, class: "btn btn-light", id: "margin-top"%>
</div>
