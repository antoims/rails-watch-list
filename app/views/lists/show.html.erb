<div class="container">
  <h2> <%= @list.name %> </h2>
  <h4>Bookmarks</h4>
  <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>

  <ul class='list-group'>
    <% @list.bookmarks.each do |bookmark| %>
      <li class='list-group-item'>
        <%= bookmark.comment %> - <%= bookmark.movie.title%>
        <%= bookmark.id %>
        <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete } %>
      </li>
    <% end %>
  </ul>
  <p> <%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-success", id: "margin-top" %> </p>

</div>
